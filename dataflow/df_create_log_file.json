{
	"name": "df_create_log_file",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_src_log_file",
						"type": "DatasetReference"
					},
					"name": "logfile"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     PipelineName as string,",
				"     PipelineRunId as string,",
				"     TriggerId as string,",
				"     TriggerName as string,",
				"     TriggerTime as string,",
				"     DataFactoryName as string,",
				"     file_name as string",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> logfile",
				"logfile derive(PipelineName = $PipelineName,",
				"          PipelineRunId = $PipelineRunId,",
				"          TriggerId = $TriggerId,",
				"          TriggerName = $TriggerName,",
				"          TriggerTime = $TriggerTime,",
				"          DataFactoryName = $DataFactoryName,",
				"          filename = $file_name) ~> derivedColumn1"
			]
		}
	}
}