{
	"name": "df_create_log_file_append",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_src_log_file",
						"type": "DatasetReference"
					},
					"name": "sourcedummy"
				},
				{
					"dataset": {
						"referenceName": "ds_log_append",
						"type": "DatasetReference"
					},
					"name": "logappend"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_sink_logfile",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "select1"
				},
				{
					"name": "union1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     PipelineName as string,",
				"     PipelineRunId as string,",
				"     TriggerId as string,",
				"     TriggerTime as string,",
				"     DataFactoryName as string,",
				"     file_name as string,",
				"     TriggerName as string",
				"}",
				"source(output(",
				"          dummy as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourcedummy",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     wildcardPaths:[('output/'+$file_name)]) ~> logappend",
				"sourcedummy derive(PipelineName = $PipelineName,",
				"          PipelineRunId = $PipelineRunId,",
				"          TriggerId = $TriggerId,",
				"          TriggerName = $TriggerName,",
				"          TriggerTime = $TriggerTime,",
				"          DataFactoryName = $DataFactoryName,",
				"          fileNmae = $file_name) ~> derivedColumn1",
				"derivedColumn1 select(mapColumn(",
				"          PipelineName,",
				"          PipelineRunId,",
				"          TriggerId,",
				"          TriggerName,",
				"          TriggerTime,",
				"          DataFactoryName,",
				"          fileNmae",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1, logappend union(byName: true)~> union1",
				"union1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:[($file_name)],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     saveOrder: 1,",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}